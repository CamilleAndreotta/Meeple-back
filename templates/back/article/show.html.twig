{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<div class="container pt-5">

    <div class="row mb-2">
        
        <div class="col">
            <h1 class="text-center my-5" style="font-family: 'Luckiest Guy', serif;color: #007682;">{{ article.title }}</h1>
            <a class="btn btn-primary mb-4" style="font-family: 'Luckiest Guy', serif;background-color:#007682;border:none;letter-spacing: 1px;" href="{{ path('app_back_article_index') }}">Retour à la liste</a>
                
                <table class="table text-center">
                    <tbody class="align-middle">
                        <tr>
                            <th class="pink_line" >Id</th>
                            <td>{{ article.id }}</td>
                        </tr>
                        {# <tr>
                            <th style="font-family: 'Luckiest Guy', serif;color: #d53767;letter-spacing: 1px;">Titre</th>
                            <td>{{ article.title }}</td>
                        </tr> #}
                        <tr>
                            <th class="pink_line">Résumé</th>
                            <td>{{ article.description }}</td>
                        </tr>
                        <tr>
                            <th class="pink_line">Contenu</th>
                            <td>{{ article.content }}</td>
                        </tr>
                        <tr>
                            <th class="pink_line">Publié le</th>
                            <td>{{ article.createdAt ? article.createdAt|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th class="pink_line">Modifié le</th>
                            <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d') : '' }}</td>
                        </tr>        
                        <tr>
                            <th>Image de l'article</th>
                            <td><img src="{{ article.image }}" style="width: 200px; height: 200px;" alt="Image"></td>
                        </tr>
                        
                    </tbody>
                </table>
                {% if is_granted('ROLE_ADMIN') %} 
                    <div class="col d-flex">
                        <a class="btn btn btn-warning" style="background-color: #333333;border:none;color: white;font-weight:bold;margin-right: 1.5em;" href="{{ path('app_back_article_edit', {'id': article.id}) }}">Modifier</a>

                        {{ include('back/article/_delete_form.html.twig') }}
                    </div>
                {% endif %}
        </div>
    </div>
</div>
    

{% endblock %}
